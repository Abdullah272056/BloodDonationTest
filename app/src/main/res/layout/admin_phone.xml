<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="#FF5722"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:background="#E5E6E2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



<ImageView
    android:src="@drawable/ic_bd_icon"
    android:layout_width="60dp"
    android:layout_height="60dp"/>
    <TextView
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="You can not communication with donator for security issue. So, You should contact before  with admin.
        \n\n"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adminPhoneTextViewId"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:padding="10dp"
        android:text="Admin : 00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:background="#FEFFFC"
            android:id="@+id/cancelTextViewId"
            android:padding="10dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:id="@+id/callTextViewId"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:text="Call"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
