<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:background="#F3EAEA"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="#1C1C1C"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:text="Select blood group"
        android:layout_width="294dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/aPositiveTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="A+"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/aNegativeTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="A-"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/abPositiveTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="AB+"
            android:layout_width="90dp"
            android:layout_height="90dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bPositiveTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="B+"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:padding="10dp"
            android:src="@drawable/ic_bd_icon"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="A-"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/bNegativeTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="B-"
            android:layout_width="90dp"
            android:layout_height="90dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/oPositiveTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="O+"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/oNegativeTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="O-"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/abNegativeTextViewId"
            android:layout_margin="7dp"
            android:textColor="#FF0000"
            android:background="#1C1C1C"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            android:text="AB-"
            android:layout_width="90dp"
            android:layout_height="90dp"/>


    </LinearLayout>





</LinearLayout>
